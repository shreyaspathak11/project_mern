{
	"compilerOptions": {
		"module": "ES6",
		"moduleResolution": "node",
		"target": "ES6",
		"lib": [
			"DOM",
			"ES2015",
			"ES2016",
			"ES2017",
			"ES2018",
			"ES2019",
			"ES2020",
			"ESNext",
		],
		"strict": true,
		"noImplicitAny": true,
		"removeComments": true,
		"sourceMap": true,
		"composite": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"baseUrl": "src",
		"outDir": "build"
	},
	"files": [
		"./index.d.ts"
	]
}
